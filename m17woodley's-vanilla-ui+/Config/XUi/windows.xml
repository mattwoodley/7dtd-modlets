<configs>

	<append xpath="/windows/window[@name='windowToolbelt']/rect" >
		<rect name="window_RELXIXUI_playerStatsHUD" width="756" height="19" pos="0,-77" visible="{statvisible}" anchor="LeftBottom">
			<rect name="rect_playerStats" controller="PlayerStatsWindow">			
				<rect controller="CharacterFrameWindow" >
					<rect name="rect_CharacterFrameStats">
						<label name="label_playerStatsThirst" depth="13" pos="195,1" width="200" height="19" font_size="19" text="{playerfoodmax}" />
						<label name="label_playerStatsFood" depth="13" pos="571,1" width="200" height="19" font_size="19" text="{playerwatermax}" />
					</rect>
					<panel name="header" height="10" depth="13" pos="9999,9999" backgroundspritename="ui_game_panel_header">
						<label depth="13" name="characterName" pos="42,-6" width="150" height="32" text="" font_size="32"/>
						<label depth="13" name="levelNumber" pos="240,-10" width="80" height="28" text="" color="[lightGrey]"/>
					</panel>
					<rect visible="{showcharacter}" pos="9999,9999" >
						<panel name="previewFrame" depth="13" pos="0,0" width="10" on_press="true" on_hover="true" disableautobackground="true" snap="false">
							<rect>
								<texture depth="13" name="playerPreview" material="Materials/Transparent Colored" size="8,8" globalopacity="false"/>
							</rect>
						</panel>
					</rect>
				</rect>
			</rect>
		</rect>
	</append>

	<!-- Show Current Water and Food levels out of max level in text on their respective bars -->
		<!-- Toolbelt -->
		<!-- Raise Toolbelt to make room for food and water text -->
		<set xpath="/windows/window[@name='windowToolbelt']/@pos">-388, 104</set>

		<!-- Food -->
		<remove xpath="/windows/window[@name='windowToolbelt']/rect/rect[@stat_type='Food']"/>
		<append xpath="/windows/window[@name='windowToolbelt']/rect">
			<rect pos="0,-77" width="377" height="19" controller="HUDStatBar" stat_type="Food" visible="{statvisible}">
				<label pos="-174, 1" depth="7" name="TextContent" font_size="19" color="[white]" text="{playerfood}" justify="right" height="19" width="357" controller="PlayerStatsWindow" />

				<label pos="10, -1" depth="7" name="TextContent" font_size="15" color="[white]" text="/" justify="center" height="17" width="357" controller="PlayerStatsWindow" />
				<sprite depth="1" color="[mediumGrey]" sprite="menu_empty2px" globalopacity="false" type="sliced" />
				<sprite depth="9" color="[black]" sprite="menu_empty2px" globalopacity="false" type="sliced" fillcenter="false" />

				<filledsprite depth="5" pos="1,0" width="376" name="BarContent" color="31,230,0,128" globalopacity="false" type="filled" fill="0"  />
			</rect>
		</append>

		<!-- Water -->
		
		<remove xpath="/windows/window[@name='windowToolbelt']/rect/rect[@stat_type='Water']"/>
		<append xpath="/windows/window[@name='windowToolbelt']/rect">
			<rect pos="376,-77" width="377" height="19" controller="HUDStatBar" stat_type="Water" visible="{statvisible}">
				<label pos="-174, 1" depth="7" name="TextContent" font_size="19" color="[white]" text="{playerwater}" justify="right" height="19" width="357" controller="PlayerStatsWindow"/>
				<label pos="10, -1" depth="7" name="TextContent" font_size="15" color="[white]" text="/" justify="center" height="17" width="357" controller="PlayerStatsWindow" />
				<sprite depth="1" color="[mediumGrey]" sprite="menu_empty2px" globalopacity="false" type="sliced" />
				<sprite depth="9" color="[black]" sprite="menu_empty2px" globalopacity="false" type="sliced" fillcenter="false" />

				<filledsprite depth="5" pos="1,0" width="376" name="BarContent" color="0,42,199,160" globalopacity="false" type="filled" fill="0"  />
			</rect>
		</append>

	<!-- Stats Top-Right -->
	<append xpath="/windows/window[@name='HUDRightStatBars']">

		<!-- Player Temperature -->
		<rect name="hud" pos="-1833,1025" rows="1" cols="1" width="85" controller="MapStats" visible="{statvisible}">
			<sprite depth="1" pos="0,0" height="30" width="85" color="0,0,0,80" type="sliced" foregroundlayer="true"/>
			<sprite depth="2" name="windowIcon" width="24" height="24" pos="4,-3" sprite="ui_game_symbol_light_armor" color="[iconColor]" foregroundlayer="true"/>
			<label depth="2" name="TextContent" pos="32,-5" width="85" height="24" text="[DECEA3]{playercoretemp}" font_size="19"/>
		</rect>

		<!-- World Temperature -->
		<rect name="hud" pos="-1748,1025" rows="1" cols="1" width="70" controller="MapStats" visible="{statvisible}">
			<sprite depth="1" pos="0,0" height="30" width="70" color="0,0,0,80" type="sliced" foregroundlayer="true"/>
			<sprite depth="2" name="windowIcon" width="24" height="24" pos="4,-3" sprite="ui_game_symbol_temperature" color="[iconColor]" foregroundlayer="true"/>
			<label depth="2" name="TextContent" pos="32,-5" width="70" height="24" text="[DECEA3]{maptemperature}" font_size="19"/>
		</rect>

		<!-- Elevation -->
		<rect name="hud" pos="-1678,1025" rows="1" cols="1" width="70" controller="MapStats" visible="{statvisible}">
			<sprite depth="1" pos="0,0" height="30" width="70" color="0,0,0,80" type="sliced" foregroundlayer="true"/>
			<sprite depth="2" name="windowIcon" width="24" height="24" pos="4,-3" sprite="ui_game_symbol_climb" color="[iconColor]" foregroundlayer="true"/>
			<label depth="2" name="TextContent" pos="32,-5" width="70" height="24" text="[DECEA3]{mapelevation}" font_size="19"/>					
		</rect>

		<!-- Kills -->
		<rect name="hud" pos="-268,1025" rows="1" cols="1" width="60" controller="PlayerStatsWindow" visible="{statvisible}">
			<sprite depth="1" pos="0,0" height="30" width="73" color="0,0,0,80" type="sliced" foregroundlayer="true"/>
			<sprite depth="2" name="windowIcon" width="26" height="26" pos="4,-3" sprite="ui_game_symbol_marksmanship" color="[iconColor]" foregroundlayer="true"/>
			<label depth="2" name="TextContent" pos="30,-5" width="40" height="24" text="[DECEA3]{playerzombiekills}" font_size="19" justify="center"/>
		</rect>
		
		<!-- Deaths -->
		<rect name="hud" pos="-195,1025" rows="1" cols="1" width="60" controller="PlayerStatsWindow" visible="{statvisible}">
			<sprite depth="1" pos="0,0" height="30" width="60" color="0,0,0,80" type="sliced" foregroundlayer="true"/>
			<sprite depth="2" name="windowIcon" width="23" height="23" pos="4,-3" sprite="ui_game_symbol_near_death_trauma" color="[iconColor]" foregroundlayer="true"/>
			<label depth="2" name="TextContent" pos="26,-5" width="33" height="24" text="[DECEA3]{playerdeaths}" font_size="19" justify="center"/>
		</rect>

	</append>

	<!-- Add Distance Travelled to Vehicle UI -->
	<append xpath="/windows/window[@name='HUDRightStatBars']/rect[2]">
		<rect controller="HUDStatBar" stat_type="VehicleFuel" visible="{statvisible}">
			<sprite depth="1" pos="-182,919" height="30" width="91" color="0,0,0,80" type="sliced" foregroundlayer="true"/>
			<sprite depth="2" name="windowIcon" width="23" height="23" pos="-180,915" sprite="ui_game_symbol_run" color="[iconColor]" foregroundlayer="true"/>
			<label depth="6" controller="PlayerStatsWindow" width="58" height="23" name="TextContent" pos="-155,914" font_size="19" text="[DECEA3]{playertravelled}" justify="center"/>
		</rect>
	</append>

	<!--Compass Improvements: Center is marked. Increased space between date and time.-->
		<!-- Removes grey offset for compass -->
		<remove xpath="/windows/window[@name='windowCompass']/sprite[@style='compass.window.background.border']"/>

		<!-- Removes vanilla date and time -->
		<remove xpath="/windows/window[@name='windowCompass']/sprite[@pos='240,-60']"/>

		<append xpath="/windows/window[@name='windowCompass']">
			<label depth="20" name="TextContent" pos="50,2" width="380" height="42" text="I" font_size="42" color="255,255,255,150" justify="center"/>
			<rect name="hud" pos="-80,-2" rows="1" cols="1" width="121">
				<sprite depth="1" pos="0,0" height="38" width="121" color="0,0,0,80" type="sliced" foregroundlayer="true"/>
				<label depth="2" name="TextContent" pos="4,-4" width="113" height="30" text="{daytitle}: [{daycolor|always}]{day|always}" font_size="28" color="[white]" justify="center"/>
			</rect>
			<rect name="hud" pos="439,-2" rows="1" cols="1" width="108">
				<sprite depth="1" pos="0,0" height="38" width="121" color="0,0,0,80" type="sliced" foregroundlayer="true"/>
				<label depth="2" name="TextContent" pos="4,-4" width="113" height="30" text="{timetitle}: [DECEA3]{time|always}" font_size="28" color="[white]" justify="center"/>
			</rect>
		</append>
</configs>
